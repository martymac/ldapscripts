if [ -z "$1" ]
then
  echo "Usage : $0 <groupname> [gid]"
  exit 1
fi

# Source runtime file
_RUNTIMEFILE="/etc/ldapscripts/runtime"
. "$_RUNTIMEFILE"

# Group name
_GROUP="$1"
# Group GID
if [ -z "$2" ] # No argument, we must find a correct GID
then
  _findlastgroup
else
  _GID="$2"
fi

_extractldif | _filterldif | _ldapadd

[ $? -eq 0 ] || end_die "Error adding group $_GROUP to LDAP"
end_ok "Successfully added group $_GROUP to LDAP"

# Ldif info
##dn: cn=<group>,<gsuffix>,<suffix>
##objectClass: posixGroup
##cn: <group>
##gidNumber: <gid>
